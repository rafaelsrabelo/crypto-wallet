<p id="notice"><%= notice %></p>

<h1>Tipos de moeda</h1>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="row">Descrição</th>
      <th scope="row">Sigla</th>
      <th scope="row" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar tipo de moeda', new_mining_type_path %> <br/>
<%= link_to 'Voltar', root_path %>

