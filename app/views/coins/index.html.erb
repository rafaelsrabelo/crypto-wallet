<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col"><%= Coin.human_attribute_name(:description) %></th>
      <th scope="col"><%= Coin.human_attribute_name(:acronym) %></th>
      <th scope="col"><%= Coin.human_attribute_name(:url_image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 25, heighth: 25 %></td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova moeda', new_coin_path %> <br/>
<%= link_to 'Voltar', root_path %>

